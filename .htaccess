# =============================================================================
# StormHosting - Simple Working .htaccess
# Простой и рабочий конфиг для красивых URL
# =============================================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # =============================================================================
    # 1. HTTPS и WWW редиректы (если нужно)
    # =============================================================================
    # Раскомментируйте если нужен редирект HTTP -> HTTPS
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Раскомментируйте если нужно убрать www
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # =============================================================================
    # 2. Исключения - НЕ трогать эти пути
    # =============================================================================
    # Реальные файлы - отдать как есть
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Реальные директории - отдать как есть
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # API endpoints - не трогать
    RewriteRule ^v1/ - [L]

    # WHMCS billing - не трогать
    RewriteRule ^billing/ - [L]

    # Assets - не трогать
    RewriteRule ^assets/ - [L]

    # Uploads - не трогать
    RewriteRule ^uploads/ - [L]

    # =============================================================================
    # 3. Красивые URL (главное правило)
    # =============================================================================
    # /hosting/vps -> /pages/hosting/vps.php
    # /tools/site-check -> /pages/tools/site-check.php
    # /contacts -> /pages/contacts.php

    # Двухуровневые URL: /category/page
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/pages/$1/$2.php -f
    RewriteRule ^([^/]+)/([^/]+)/?$ /pages/$1/$2.php [L,QSA]

    # Одноуровневые URL: /page
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/pages/$1.php -f
    RewriteRule ^([^/]+)/?$ /pages/$1.php [L,QSA]

</IfModule>

# =============================================================================
# Security - Базовая безопасность
# =============================================================================
# Запретить листинг директорий
Options -Indexes

# Защита служебных файлов
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Защита .env файлов (SECURITY FIX)
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

<FilesMatch "\.(bak|backup|old|log|sql)$">
    Require all denied
</FilesMatch>

# =============================================================================
# Performance - Сжатие и кеширование
# =============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>

# =============================================================================
# Headers - Усиленные заголовки безопасности (SECURITY AUDIT FIX)
# =============================================================================
<IfModule mod_headers.c>
    # MIME type sniffing prevention
    Header set X-Content-Type-Options "nosniff"

    # XSS Protection (для старых браузеров, современные используют CSP)
    Header set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy - контролирует какую информацию передавать в Referer header
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # HSTS - Strict Transport Security (включить только если используете HTTPS!)
    # Заставляет браузер всегда использовать HTTPS
    # ВАЖНО: Раскомментируйте только если у вас настроен SSL сертификат!
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Permissions Policy - контролирует доступ к API браузера
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

    # Content Security Policy (CSP) - защита от XSS атак
    # Это базовая политика, настройте под ваши нужды
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://code.jquery.com https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; img-src 'self' data: https: http:; font-src 'self' https://cdn.jsdelivr.net https://fonts.gstatic.com; connect-src 'self' https://www.google.com; frame-src 'self' https://www.google.com;"

    # NOTE: CSP использует 'unsafe-inline' и 'unsafe-eval' для совместимости
    # В будущем рекомендуется удалить их и перейти на nonce-based или hash-based CSP
</IfModule>

# =============================================================================
# Encoding - UTF-8
# =============================================================================
AddDefaultCharset UTF-8
