# =============================================================================
# Limit Request Size - Ограничение размера запроса
# =============================================================================
<IfModule mod_security.c>
    # Ограничить размер тела запроса (например, для защиты от DDoS)
    SecRequestBodyLimit 10485760
</IfModule>

